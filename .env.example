# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB - Use local or MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/career-assistant
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/career-assistant

# JWT Secret - Change this to a random secure string
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cerebras AI - Get from https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your-cerebras-api-key-here

# Pinecone Configuration - Get from https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=career-assistant

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
